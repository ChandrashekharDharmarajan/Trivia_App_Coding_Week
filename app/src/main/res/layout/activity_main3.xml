<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="410dp"
        android:layout_height="730dp"
        android:layout_marginStart="283dp"
        android:layout_marginBottom="4dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/yellow" />
    <TextView
        android:id="@+id/textView9"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginTop="100dp"
        android:fontFamily="sans-serif-black"
        android:text="Question 2"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    
    





    <TextView
        android:id="@+id/question_s2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="200dp"
        android:fontFamily="sans-serif-black"
        android:text="Who has won the most Wimbeldon Titles?"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <RadioGroup
        android:id="@+id/question2_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/question_s2">

        <RadioButton
            android:id="@+id/question2_option1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pete Sampras"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/question2_option2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Novak Djokovic"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/question2_option3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Roger Fedrer"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/question2_option4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bjorn Borg"
            android:textSize="20sp" />
    </RadioGroup>

    <Button
        android:id="@+id/Check1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="235dp"
        android:text="Check"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question_s2" />

    <Button
        android:id="@+id/nextquestion1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="136dp"
        android:layout_marginTop="88dp"
        android:text="Next Question"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Check1" />

    <TextView
        android:id="@+id/checkanswer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="155dp"
        android:layout_marginTop="31dp"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Check1"
        tools:text="Correct" />


</androidx.constraintlayout.widget.ConstraintLayout>
